{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/esm",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["./src"]
}
